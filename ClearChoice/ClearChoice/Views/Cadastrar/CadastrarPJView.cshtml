@model ClearChoice.ViewModel.ValidacaoPessoaJuridica

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Personal Choice</title>

    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/Content/animate/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/animate/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/animate/animate.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/animate/hamburgers.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/animate/select2.min.css" />
    <link href="~/Content/animate/main.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/animate/util.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />

    <link href="~/Content/linearicons.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/cssCarousel/adventureMain.css" rel="stylesheet" />

</head>
<body>
    @if (TempData["success"] != null || TempData["error"] != null)
    {
        <input type="hidden" id="success"
               value="@TempData["success"]" />

            <input type="hidden" id="error"
                   value="@TempData["error"]" />
    }

    <header class="default-header">
        <nav class="navbar navbar-expand-lg  navbar-light">
            <div class="container">
                <a class="navbar-brand" href="index.html">
                    <img src="img/logo.png" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="text-white lnr lnr-menu"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end align-items-center" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li><a href="@Url.Action("Home", "Home")">Home</a></li>
                        <li><a href="@Url.Action("CadastrarPFView", "Cadastrar")">Cadastrar-se</a></li>
                        <li><a href="@Url.Action("CadastrarPJView", "Cadastrar")">Torne-se parceiro</a></li>
                        <li><a href="@Url.Action("Login", "Home")">Entrar</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container-contact100">

            <form class="contact100-form validate-form">
                <span class="contact100-form-title">
                    Seja bem vindo
                </span>

                <div class="wrap-input100 rs1-wrap-input100">
                    <span class="label-input100">CEP</span>
                    @Html.EditorFor(model => model.CEP, new { htmlAttributes = new { @class = "input100", @placeholder = "CEP", @Type = "Text" } })
                    @Html.ValidationMessageFor(model => model.CEP, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="container-contact100-form-btn">
                            <button class="contact100-form-btn" formaction="BuscarCepPessoaJuridica" formmethod="post">
                                <span>
                                    Buscar CEP
                                    <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                                </span>

                            </button>
                        </div>
                    </div>
                </div>

                <div class="wrap-input100 rs1-wrap-input100">
                    <span class="label-input100">Nome</span>
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "input100", @placeholder = "Nome da empresa", @Type = "Text" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 rs1-wrap-input100">
                    <span class="label-input100">Email</span>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input100", @placeholder = "exemplo@hotmail.com" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 rs1-wrap-input100">
                    <span class="label-input100">CNPJ</span>
                    @Html.EditorFor(model => model.CNPJ, new { htmlAttributes = new { @class = "input100", @placeholder = "CNPJ" } })
                    @Html.ValidationMessageFor(model => model.CNPJ, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 rs1-wrap-input100">
                    <span class="label-input100">Login</span>
                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "input100", @placeholder = "Digite seu login..." } })
                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 rs1-wrap-input100">
                    <span class="label-input100">Endereço</span>
                    @Html.EditorFor(model => model.Logradouro, new { htmlAttributes = new { @class = "input100", @placeholder = "Digite o endereço" } })
                    @Html.ValidationMessageFor(model => model.Logradouro, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 rs1-wrap-input100">
                    <span class="label-input100">Cidade</span>
                    @Html.EditorFor(model => model.Localidade, new { htmlAttributes = new { @class = "input100", @placeholder = "Cidade" } })
                    @Html.ValidationMessageFor(model => model.Localidade, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 rs1-wrap-input100">
                    <span class="label-input100">Estado</span>
                    @Html.EditorFor(model => model.UF, new { htmlAttributes = new { @class = "input100", @placeholder = "Estado" } })
                    @Html.ValidationMessageFor(model => model.UF, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                </div>


                <div class="wrap-input100 rs1-wrap-input100">
                    <span class="label-input100">Senha</span>
                    @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "input100", @placeholder = "********" } })
                    @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                </div>

                <div class="container-contact100-form-btn">
                    <button class="contact100-form-btn">
                        <span>
                            Cadastrar
                            <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
            </form>

            <span class="contact100-more">
                &copy; Personal Choice <span class="contact100-more-highlight"> @DateTime.Now.Year</span>
            </span>
        </div>

    }

    <script src="~/Scripts/App/toast.js"></script>
    <script src="~/Scripts/toastr.js"></script>
</body>
</html>

