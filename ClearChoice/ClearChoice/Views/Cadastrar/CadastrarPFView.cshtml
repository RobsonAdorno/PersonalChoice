                                @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
                                <span class="focus-input100"></span>
                            </div>

                            <div class="wrap-input100 rs1-wrap-input100">
                                <span class="label-input100">Cidade</span>
                                @Html.EditorFor(model => model.Localidade, new { htmlAttributes = new { @class = "input100", @placeholder = "Cidade" } })
                                @Html.ValidationMessageFor(model => model.Localidade, "", new { @class = "text-danger" })
                                <span class="focus-input100"></span>
                            </div>

                            <div class="wrap-input100 rs1-wrap-input100">
                                <span class="label-input100">Estado</span>
                                @Html.EditorFor(model => model.UF, new { htmlAttributes = new { @class = "input100", @placeholder = "Estado" } })
                                @Html.ValidationMessageFor(model => model.UF, "", new { @class = "text-danger" })
                                <span class="focus-input100"></span>
                            </div>


                            <div class="wrap-input100 rs1-wrap-input100">
                                <span class="label-input100">Senha</span>
                                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "input100", @placeholder = "********" } })
                                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                                <span class="focus-input100"></span>
                            </div>

                    <div class="wrap-input100 rs1-wrap-input100">
                       
                       @Html.DropDownList("Categorias", null,
                    " -- Selecione -- ", new { @class = "input100" })
                        @Html.ValidationMessageFor(model => model.Categoria, null, new { @class = "text-danger" })
                   
                       
                        <span class="focus-input100"></span>
                    </div>

                            <div class="container-contact100-form-btn">
                                <button class="contact100-form-btn">
                                    <span>
                                        Cadastrar
                                        <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                                    </span>
                                </button>
                            </div>
                </form>
