@model ClearChoice.Model.Experiencia
@using ClearChoice.DAL
@using ClearChoice.Model


@{

    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}


<!DOCTYPE html>

<html lang="pt-br">

<head>

    <title></title>

</head>

<body class="app sidebar-mini rtl">
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-suitcase"></i> Experiências</h1>
                <p>Seção de experiências, como administrador você tem a opção de cadastrar novas experiências...</p>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
                <li class="breadcrumb-item"><a href="#">Experiências</a></li>
            </ul>
        </div>

    </main>

    @Html.BeginForm(){
    <div class="modal fade overlay" id="usuarioModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content tile">
                <div class="modal-header">
                    <h5 class="modal-title" id="exitButton"></h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>

                <div id="modal-body" class="modal-body">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="tile">
                                <h3 class="tile-title">Cadastre uma nova experiência</h3>

                                <div class="tile-body">
                                    <form>
                                        <div class="form-group">

                                            <div class="col-sm-10">
                                                @Html.Label("Experiência", new { @class = "control-label" })
                                                @Html.TextBoxFor(model => model.NomeExperiencia, new { @class = "form-control" })
                                            </div>
                                            <div class="col-sm-10">
                                                @Html.LabelFor(model => model.Categoria, new { @class = "control-label" })
                                                @Html.DropDownList("Categorias", null, " -- Selecione -- ", new { @class = "form-control" })
                                            </div>
                                            <div class="col-sm-10">
                                                @Html.LabelFor(model => model.Avaliacao, new { @class = "contro-label" })
                                                @Html.TextBoxFor(model => model.Avaliacao, new { @class = "rating", @id = "kartik" })
                                                </div>
                                            <div class="col-sm-10">
                                                @Html.LabelFor(model => model.Cidade, new { @class = "contro-label" })
                                                @Html.TextBoxFor(model => model.Cidade, new { @class = "form-control" })
                                                </div>
                                            <div class="col-sm-10">
                                                @Html.LabelFor(model => model.Descricao, new { @class = "control-label" })
                                                @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control" })
                                                </div>
                                            </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-success" formaction="Cadastrar">Cadastrar</button>
                </div>
            </div>
        </div>
    </div>
    }

    <script>
        $(document).ready(function () {
            showUsuarioModal();
        });

        function showUsuarioModal() {
            $("#usuarioModal").modal({
                show: true
            });
        }
    </script>
</body>

</html>